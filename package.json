{
  "name": "@dotpassport/sdk",
  "version": "0.1.0",
  "description": "Official JavaScript/TypeScript SDK for DotPassport API",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist coverage",
    "build": "tsc",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns='integration'",
    "test:integration": "jest --testPathPattern='integration\\.test\\.ts$'",
    "prepublishOnly": "npm run build",
    "docs:generate": "node scripts/generate-gitbook-docs.js",
    "docs:serve": "gitbook serve",
    "docs:build": "gitbook build"
  },
  "keywords": [
    "dotpassport",
    "polkadot",
    "web3",
    "identity",
    "sdk"
  ],
  "author": "DotPassport Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
